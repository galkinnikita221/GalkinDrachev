<Window x:Class="Weather_drachev_galkin.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Прогноз погоды" Height="450" Width="800" Loaded="Window_Loaded">
    <Grid>
        <TextBox x:Name="CityTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" 
                 Width="200" Height="30" Margin="10" />
        <TextBlock x:Name="RequestCountTextBlock" FontSize="14"  Width="250" Height="30" Margin="10" HorizontalAlignment="Right" VerticalAlignment="Top"/>
        <Button Content="Обновить погоду" HorizontalAlignment="Left" VerticalAlignment="Top" 
                Width="120" Height="30" Click="UpdateWeather_Click" Margin="220,10,0,0"/>
        <DataGrid x:Name="WeatherDataGrid" AutoGenerateColumns="True" 
                  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" 
                  Margin="10,50,10,10"/>
    </Grid>
</Window>